extends admin-dashboard.pug

block css
    link(rel="stylesheet", type="text/css", href="/css/performance-panel.css")

block content
    button(onclick="changeForm('addGenreForm')") Dodaj gatunek sztuk teatralnych
    button#viewGenres Wyświetl dostępne gatunki
    button(onclick="changeForm('addPerformanceForm')") Dodaj spektakl
    button(onclick="changeForm('searchPerformanceForm')") Wyszukaj spektakl

    #alert

    form#addGenreForm.input-form.invisible(name="addGenreForm")
        .input-wrapper
            label Nazwa gatunku:
            input(type="text", name="name")
        button(type="submit") Dodaj 

    form#addPerformanceForm.input-form.invisible(name="addPerformanceForm")
        .input-wrapper
            label Tytuł spektaklu:
            input(type="text", name="title")
            label Gatunek:
            select.genreSelect
            label Reżyser:
            select.directorSelect
            label Scenarzysta:
            select.scriptwriterSelect
            label Opis:
            input(type="text", name="description")
        button(type="submit") Dodaj 

    form#searchPerformanceForm.input-form.invisible(name="searchPerformanceForm")
        .input-wrapper
            label Tytuł spektaklu:
            input(type="text", name="title")
            label Gatunek:
            input(type="text", name="genre")
            .additional-options.invisible
                h3 Reżyser 
                label Imię: 
                input(text="text", name="director_name")
                label Nazwisko:
                input(text="text", name="director_surname")
                h3 Scenarzysta
                label Imię: 
                input(type="text", name="scriptwriter_name")
                label Nazwisko: 
                input(type="text", name="scriptwriter_surname")
            button.additionalSearch-btn(type="button") Dodatkowe opcje wyszukiwania
        button(type="submit") Szukaj

    #editContainer.input-form.invisible
        form#editPerformanceForm(name="editPerformanceForm")
            .input-wrapper
                label ID:
                input(type="text", name="id", disabled)
                label Tytuł spektaklu:
                input(type="text", name="title")
                label Gatunek:
                select.genreSelect
                label Reżyser:
                select.directorSelect
                label Scenarzysta:
                select.scriptwriterSelect
                label Opis:
                input(type="text", name="description")
            button(type="submit") Edytuj

        #technicianContainer
            table#listOfTechnicians
                thead
                    tr 
                        th(colspan="4") TECHNIK
                    tr
                        th ID
                        th Imię
                        th Nazwisko
                        th Profesja
                tbody

            button#addTechnician-btn(type="button") Dodaj technika
            form#addTechnicianForm.invisible(name="addTechnicianForm")
                .input-wrapper
                    label Profesja:
                    select.professionSelect
                    label Technik:
                    select.technicianSelect
                button(type="submit") Dodaj 

        #roleContainer
            table#listOfRoles
                thead
                    tr
                        th(colspan="2") ROLA
                        th(colspan="3") AKTOR
                    tr
                        th ID 
                        th Nazwa
                        th ID
                        th Nazwisko
                        th Profesja
                tbody

            button#addRole-btn(type="button") Dodaj rolę
            form#addRoleForm.invisible(name="addRoleForm")
                .input-wrapper
                    label Nazwa roli:
                    input(type="text", name="role") 
                    label ID aktora:
                    input(type="text", name="actor_id")
                button(type="submit") Dodaj 

        h3 Wyszukaj aktora
        form#searchActorForm(name="searchActorForm")
            .input-wrapper
                label Imię:
                input(type="text", name="name")
                label Nazwisko:
                input(type="text", name="surname")
            button(type="submit") Szukaj 

    #dataContainer
    script(src="/js/performance-panel.js")