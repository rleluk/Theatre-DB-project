extends admin-dashboard.pug
append css
    link(rel="stylesheet", type="text/css", href="/css/director-panel.css")

block content
    button(onclick="changeForm('addDirectorForm')") Dodaj reżysera
    button(onclick="changeForm('searchDirectorForm')") Wyszukaj reżysera
    #alert
    form#addDirectorForm.nav.invisible(name="addDirectorForm")
        input(type="text", name="name")
        br
        input(type="text", name="surname")
        br
        input(type="date" name="bday")
        br
        input(type="text" name="description")
        br
        button(type="submit") Dodaj 
    form#searchDirectorForm.nav.invisible(name="searchDirectorForm")
        input(type="text", name="name")
        br
        input(type="text", name="surname")
        br
        button(type="submit") Szukaj 
    form#editDirectorForm.nav.invisible(name="editDirectorForm")
        input(type="text", name="id", disabled)
        br
        input(type="text", name="name")
        br
        input(type="text", name="surname")
        br
        input(type="date" name="bday")
        br
        input(type="text" name="description")
        br
        button(type="submit") Edytuj 
    #dataContainer
    script(src="/js/director-panel.js")